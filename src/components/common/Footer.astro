---
import { getLangFromUrl, useTranslations, getLocalizedPath } from '@/i18n/utils';
import { PawPrint } from 'lucide-static';

const GithubIcon = '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C3 2 2 2 2 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 1 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const footerLinks = [
  { href: getLocalizedPath('/terms', lang), label: t('footer.terms') },
  { href: getLocalizedPath('/privacy', lang), label: t('footer.privacy') },
  { href: getLocalizedPath('/licenses', lang), label: t('footer.licenses') },
  { href: getLocalizedPath('/changelog', lang), label: t('footer.changelog') },
  { href: getLocalizedPath('/contact', lang), label: t('footer.contact') },
];
---

<footer class="border-t bg-muted/50">
  <div class="container mx-auto px-4 py-12">
    <div class="flex flex-col md:flex-row justify-between items-center gap-8">
      <div class="flex items-center gap-2">
        <span class="w-6 h-6 [&>svg]:w-full [&>svg]:h-full" set:html={PawPrint} />
        <span class="text-xl font-bold">Motekita</span>
      </div>

      <nav class="flex flex-wrap justify-center gap-6">
        {footerLinks.map((link) => (
          <a
            href={link.href}
            class="text-sm text-muted-foreground hover:text-foreground transition-colors"
          >
            {link.label}
          </a>
        ))}
      </nav>

      <div class="flex items-center gap-4">
        <a
          href="https://github.com/luckyretriever/motekita"
          target="_blank"
          rel="noopener noreferrer"
          class="text-muted-foreground hover:text-foreground transition-colors"
          aria-label="GitHub"
        >
          <span class="w-5 h-5 [&>svg]:w-full [&>svg]:h-full" set:html={GithubIcon} />
        </a>
      </div>
    </div>

    <div class="mt-8 pt-8 border-t text-center text-sm text-muted-foreground">
      {t('footer.copyright')}
    </div>
  </div>
</footer>
