---
import { getLangFromUrl, useTranslations } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="pricing" class="py-20 sm:py-32">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold">{t('pricing.title')}</h2>
      <p class="mt-4 text-lg text-muted-foreground">{t('pricing.subtitle')}</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
      <!-- Free Plan -->
      <div class="bg-background rounded-lg p-8 shadow-sm border">
        <h3 class="text-2xl font-bold">{t('pricing.free')}</h3>
        <div class="mt-4">
          <span class="text-4xl font-bold">{t('pricing.free.price')}</span>
        </div>
        <p class="mt-4 text-muted-foreground">{t('pricing.free.desc')}</p>
        <ul class="mt-8 space-y-4">
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>{t('pricing.free.feature1')}</span>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>{t('pricing.free.feature2')}</span>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>{t('pricing.free.feature3')}</span>
          </li>
        </ul>
        <a
          href="#download"
          class="mt-8 block w-full text-center rounded-md border border-input bg-background px-4 py-3 font-medium hover:bg-accent transition-colors"
        >
          {t('hero.cta')}
        </a>
      </div>

      <!-- Premium Plan -->
      <div class="bg-primary text-primary-foreground rounded-lg p-8 shadow-lg relative">
        <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-amber-500 text-white text-sm font-medium px-3 py-1 rounded-full">
          Popular
        </div>
        <h3 class="text-2xl font-bold">{t('pricing.premium')}</h3>
        <div class="mt-4">
          <span class="text-4xl font-bold">{t('pricing.premium.price')}</span>
          <span class="text-sm opacity-80 ml-2">{t('pricing.premium.once')}</span>
        </div>
        <p class="mt-4 opacity-90">{t('pricing.premium.desc')}</p>
        <ul class="mt-8 space-y-4">
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>{t('pricing.premium.feature1')}</span>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>{t('pricing.premium.feature2')}</span>
          </li>
          <li class="flex items-center gap-3">
            <svg class="w-5 h-5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>{t('pricing.premium.feature3')}</span>
          </li>
        </ul>
        <a
          href="#download"
          class="mt-8 block w-full text-center rounded-md bg-white text-primary px-4 py-3 font-medium hover:bg-white/90 transition-colors"
        >
          {t('hero.cta')}
        </a>
      </div>

      <!-- DLC -->
      <div class="bg-background rounded-lg p-8 shadow-sm border">
        <h3 class="text-2xl font-bold">{t('pricing.dlc.title')}</h3>
        <p class="mt-4 text-muted-foreground">
          {lang === 'ja' ? 'お好みでカスタマイズ' : 'Customize to your liking'}
        </p>
        <div class="mt-8 space-y-6">
          <div>
            <div class="flex items-center justify-between">
              <span class="font-medium">{t('pricing.dlc.dogs')}</span>
              <span class="text-muted-foreground">{t('pricing.dlc.dogs.price')}</span>
            </div>
            <p class="text-sm text-muted-foreground mt-1">
              {lang === 'ja' ? '柴犬、ハスキーなど' : 'Shiba Inu, Husky, etc.'}
            </p>
          </div>
          <div>
            <div class="flex items-center justify-between">
              <span class="font-medium">{t('pricing.dlc.costumes')}</span>
              <span class="text-muted-foreground">{t('pricing.dlc.costumes.price')}</span>
            </div>
            <p class="text-sm text-muted-foreground mt-1">
              {lang === 'ja' ? '季節限定、コスプレなど' : 'Seasonal, Cosplay, etc.'}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
