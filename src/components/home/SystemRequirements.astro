---
import { getLangFromUrl, useTranslations } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="py-20 sm:py-32 bg-muted/50" aria-labelledby="requirements-heading">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 id="requirements-heading" class="text-3xl sm:text-4xl font-bold">{t('requirements.title')}</h2>
    </div>

    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <!-- Supported OS -->
      <div class="bg-background rounded-lg p-8 shadow-sm border">
        <h3 class="text-xl font-semibold mb-6">{t('requirements.os')}</h3>
        <ul class="space-y-4">
          <li class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-lg bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center shrink-0">
              <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M0 3.449L9.75 2.1v9.451H0m10.949-9.602L24 0v11.4H10.949M0 12.6h9.75v9.451L0 20.699M10.949 12.6H24V24l-12.9-1.801"/>
              </svg>
            </div>
            <div>
              <p class="font-medium">Windows</p>
              <p class="text-sm text-muted-foreground">{t('requirements.windows')}</p>
            </div>
          </li>
          <li class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-lg bg-gray-100 dark:bg-gray-800 flex items-center justify-center shrink-0">
              <svg class="w-6 h-6 text-gray-700 dark:text-gray-300" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
