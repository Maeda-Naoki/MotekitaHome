---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { useTranslations } from '@/i18n/utils';
import { Mail, ChevronRight } from 'lucide-static';

const GithubIcon = '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C3 2 2 2 2 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 1 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>';

const t = useTranslations('ja');
const githubRepo = 'https://github.com/luckyretriever/motekita';
---

<BaseLayout
  title="お問い合わせ - Motekita"
  description="Motekitaへのお問い合わせ"
>
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h1 class="text-3xl sm:text-4xl font-bold">{t('contact.title')}</h1>
        <p class="mt-4 text-lg text-muted-foreground max-w-2xl mx-auto">
          {t('contact.desc')}
        </p>
      </div>

      <div class="max-w-2xl mx-auto">
        <div class="grid gap-6">
          <!-- GitHub Issues -->
          <a
            href={`${githubRepo}/issues/new`}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-6 p-6 bg-background rounded-lg border hover:border-primary hover:shadow-md transition-all group"
          >
            <div class="w-14 h-14 rounded-lg bg-gray-100 dark:bg-gray-800 flex items-center justify-center shrink-0 group-hover:scale-110 transition-transform">
              <span class="w-7 h-7 text-gray-700 dark:text-gray-300 [&>svg]:w-full [&>svg]:h-full" set:html={GithubIcon} />
            </div>
            <div>
              <h3 class="text-lg font-semibold">{t('contact.github')}</h3>
              <p class="text-muted-foreground mt-1">
                バグ報告、機能リクエスト、質問など
              </p>
            </div>
            <span class="w-5 h-5 ml-auto text-muted-foreground group-hover:text-foreground transition-colors [&>svg]:w-full [&>svg]:h-full" set:html={ChevronRight} />
          </a>

          <!-- Email -->
          <a
            href="mailto:support@motekita.example.com"
            class="flex items-center gap-6 p-6 bg-background rounded-lg border hover:border-primary hover:shadow-md transition-all group"
          >
            <div class="w-14 h-14 rounded-lg bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center shrink-0 group-hover:scale-110 transition-transform">
              <span class="w-7 h-7 text-blue-600 dark:text-blue-400 [&>svg]:w-full [&>svg]:h-full" set:html={Mail} />
            </div>
            <div>
              <h3 class="text-lg font-semibold">{t('contact.email')}</h3>
              <p class="text-muted-foreground mt-1">
                support@motekita.example.com
              </p>
            </div>
            <span class="w-5 h-5 ml-auto text-muted-foreground group-hover:text-foreground transition-colors [&>svg]:w-full [&>svg]:h-full" set:html={ChevronRight} />
          </a>
        </div>

        <div class="mt-12 text-center text-muted-foreground">
          <p>
            お問い合わせには通常1〜3営業日以内に返信いたします。
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
