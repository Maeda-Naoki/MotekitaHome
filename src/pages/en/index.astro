  applicationCategory: 'UtilitiesApplication',
  operatingSystem: 'Windows 11+, macOS 14+, Linux',
  softwareVersion: '1.0.0',
  downloadUrl: 'https://motekita.netlify.app/en/#download',
  screenshot: 'https://motekita.netlify.app/og-image.svg',
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: '5.0',
    ratingCount: '1',
  },
  offers: [
    {
      '@type': 'Offer',
      price: '0',
      priceCurrency: 'USD',
      name: 'Free',
      availability: 'https://schema.org/InStock',
    },
    {
      '@type': 'Offer',
      price: '5',
      priceCurrency: 'USD',
